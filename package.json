{
  "name": "todo-api",
  "version": "1.0.0",
  "description": "A simple RESTful API for managing tasks.",
  "author": "Vladyslav Kudriahov",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hexlabelposition/todo-api.git"
  },
  "bugs": {
    "url": "https://github.com/hexlabelposition/todo-api/issues"
  },
  "homepage": "https://github.com/hexlabelposition/todo-api/blob/main/README.md",
  "scripts": {
    "start": "cross-env NODE_ENV=production node bin/www",
    "dev": "cross-env NODE_ENV=development node --watch bin/www",
    "test": "cross-env NODE_ENV=test mocha test/**/*.test.js",
    "test:unit": "cross-env NODE_ENV=test mocha test/unit/**/*.test.js",
    "format": "prettier --write ."
  },
  "imports": {
    "#middlewares/*": "./src/middlewares/*",
    "#controllers/*": "./src/controllers/*",
    "#services/*": "./src/services/*",
    "#shared/*": "./src/shared/*",
    "#models/*": "./src/models/*",
    "#routes/*": "./src/routes/*",
    "#config/*": "./src/config/*"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "http-errors": "^2.0.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.7.0"
  },
  "keywords": [
    "API",
    "REST API",
    "RESTful",
    "REST",
    "CRUD",
    "task management",
    "backend",
    "backend service",
    "Node",
    "nodejs",
    "JavaScript",
    "ES6",
    "ESM",
    "Express",
    "JWT",
    "MongoDB",
    "Mongoose"
  ],
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/chai": "^5.0.0",
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.0",
    "@types/http-errors": "^2.0.4",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/mongoose": "^5.11.96",
    "@types/supertest": "^6.0.2",
    "chai": "^5.1.1",
    "cross-env": "^7.0.3",
    "mocha": "^10.7.3",
    "mongodb-memory-server": "^10.0.1",
    "prettier": "^3.3.3",
    "sinon": "^19.0.2",
    "supertest": "^7.0.0"
  }
}
